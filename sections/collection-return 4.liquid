{%- render 'section-collection-return',
    section: section,
    collection: collection,
    color_scheme: section.settings.color_scheme,
-%}

{% schema %}
{
  "name": "t:sections.collection-return.name",
  "settings": [
    {
      "type": "paragraph",
      "content": "t:sections.collection-return.settings.content"
    },
    {
      "type": "select",
      "id": "color_scheme",
      "label": "t:sections.collection-return.settings.color_scheme.label",
      "default": "2",
      "options": [
        {
          "value": "none",
          "label": "t:sections.collection-return.settings.color_scheme.options.none.label"
        },
        {
          "value": "1",
          "label": "1"
        },
        {
          "value": "2",
          "label": "2"
        },
        {
          "value": "3",
          "label": "3"
        }
      ]
    }
  ],
  "disabled_on": {
    "groups": ["footer", "header", "custom.popups"]
  }
}
{% endschema %}

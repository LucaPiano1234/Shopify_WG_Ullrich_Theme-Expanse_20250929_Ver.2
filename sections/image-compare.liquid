{%- render 'section-image-compare',
    section: section,
    height: section.settings.height,
    color: section.settings.color,
    slider_style: section.settings.slider_style,
    heading: section.settings.heading,
    heading_size: section.settings.heading_size,
    heading_position: section.settings.heading_position,
    full_width: section.settings.fullwidth,
    lazyload_images: section.settings.lazyload_images,
    hydration: 'on:visible'
-%}

{% schema %}
{
  "name": "t:sections.image-compare.name",
  "class": "image-comparison-section",
  "max_blocks": 2,
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "t:sections.image-compare.settings.heading.label"
    },
    {
      "type": "select",
      "id": "heading_size",
      "label": "t:sections.image-compare.settings.heading_size.label",
      "default": "h2",
      "options": [
        {
          "value": "h3",
          "label": "t:sections.image-compare.settings.heading_size.options.small.label"
        },
        {
          "value": "h2",
          "label": "t:sections.image-compare.settings.heading_size.options.medium.label"
        },
        {
          "value": "h1",
          "label": "t:sections.image-compare.settings.heading_size.options.large.label"
        }
      ]
    },
    {
      "type": "select",
      "id": "heading_position",
      "label": "t:sections.image-compare.settings.heading_position.label",
      "default": "left",
      "options": [
        {
          "value": "left",
          "label": "t:sections.image-compare.settings.heading_position.options.left.label"
        },
        {
          "value": "center",
          "label": "t:sections.image-compare.settings.heading_position.options.center.label"
        },
        {
          "value": "right",
          "label": "t:sections.image-compare.settings.heading_position.options.right.label"
        }
      ]
    },
    {
      "type": "checkbox",
      "id": "fullwidth",
      "label": "t:sections.image-compare.settings.fullwidth.label",
      "default": true
    },
    {
      "type": "select",
      "id": "slider_style",
      "label": "t:sections.image-compare.settings.slider_style.label",
      "default": "classic",
      "options": [
        {
          "value": "classic",
          "label": "t:sections.image-compare.settings.slider_style.options.classic.label"
        },
        {
          "value": "minimal",
          "label": "t:sections.image-compare.settings.slider_style.options.minimal.label"
        }
      ]
    },
    {
      "type": "range",
      "id": "height",
      "label": "t:sections.image-compare.settings.height.label",
      "default": 600,
      "min": 400,
      "max": 900,
      "step": 10,
      "unit": "px"
    },
    {
      "type": "header",
      "content": "t:sections.image-compare.settings.header_colors"
    },
    {
      "type": "color",
      "id": "color",
      "label": "t:sections.image-compare.settings.color.label",
      "default": "#FFFFFF"
    },
    {
      "type": "checkbox",
      "id": "lazyload_images",
      "label": "t:common.lazyload_images.label",
      "info": "t:common.lazyload_images.info",
      "default": true
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "t:sections.image-compare.blocks.image.name",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "t:sections.image-compare.blocks.image.settings.image.label"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "t:sections.image-compare.name",
      "blocks": [
        {
          "type": "image"
        },
        {
          "type": "image"
        }
      ]
    }
  ],
  "disabled_on": {
    "groups": ["footer", "header", "custom.popups"]
  }
}
{% endschema %}
